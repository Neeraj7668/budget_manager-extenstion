{
  "name": "Budget Manager",
  "manifest_version": 2,
  "version": "1.0.0",
  "description": "Chrome extension with the help of HTML5, CSS3, JavaScript, jQuery",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": ["storage", "notifications", "contextMenus"]
}
